<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="polls">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.example.demo.domain.User</class>
        <class>com.example.demo.domain.Poll</class>
        <class>com.example.demo.domain.Vote</class>
        <class>com.example.demo.domain.VoteOption</class>

        <properties>
            <!-- H2 in-memory database -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:file:./data/pollsdb"/>
            <property name="jakarta.persistence.jdbc.user" value="ole"/>
            <property name="jakarta.persistence.jdbc.password" value="pass"/>

            <!-- Schema handling -->
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>

            <!-- SQL logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
